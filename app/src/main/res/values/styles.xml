<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--TextInputLayout空间的样式-->
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
    <!--TextInputEditText空间的样式-->
    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--底部按钮的样式，例如：登录、注册、提交-->
    <style name="BottomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/bg_bottom_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LittleBottomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:background">@drawable/bg_bottom_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="SearchButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/bg_search_view_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--打卡记录1-->
    <style name="style_punch_record_tv_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!--打卡记录2-->
    <style name="style_punch_record_tv_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <!--8 dp的间隔-->
    <style name="style_flow_people_8_dp_height_split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">#55cccccc</item>
    </style>
    <!--工作任务页面中三个tab下面的文字样式-->
    <style name="style_sent_to_me_tv_below_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_click</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:drawableRight">@mipmap/ic_arrow_down</item>
    </style>

    <style name="style_gone_text_calendar">
        <item name="android:textSize">0sp</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_item_text_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#00cc99</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="style_item_text_sub_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="style_item_dispatch_text_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="style_item_dispatch_text_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_divider_line_half_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="style_divider_line_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="style_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="style_divider_line_half">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <!--9个数字按键textView的布局-->
    <style name="style_circle_number_button" parent="android:Widget.TextView">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--6位数字接收textView框的布局-->
    <style name="style_six_input_number" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/six_code_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--9个数字按键整行的布局Linear-->
    <style name="style_layout_number_linear">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:weightSum">3</item>
        <item name="android:gravity">center</item>
    </style>
    <!--全屏竖直布局-->
    <style name="style_layout_match_vertical_linear">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--全屏横向布局-->
    <style name="style_layout_match_horizon_linear">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--6位数字接收Linaer外层布局-->
    <style name="style_layout_six_input_linear">
        <item name="android:weightSum">6</item>
        <item name="android:layout_width">520dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/bg_corner_circle_16</item>
    </style>
    <!--请输入6位码的提示框-->
    <style name="style_six_input_dialog_number">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/input_six_code_open</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">sans</item>
    </style>
    <!--设备的地址-->
    <style name="style_device_address_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:typeface">sans</item>
    </style>
    <!-- 客服电话的textView-->
    <style name="style_service_phone">
        <item name="android:layout_width">372dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/customer_service_telephone</item>
        <item name="android:textColor">@color/font_bg_gray_2b</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/bg_corner_circle_4</item>
    </style>
    <!-- APP版本的字体样式-->
    <style name="style_app_version_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!--9个数字键盘整体的布局-->
    <style name="style_layout_number_total_linear">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">576dp</item>
        <item name="android:background">@drawable/bg_corner_circle_32</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">18dp</item>
    </style>
    <!--主界面两个数字区域的分隔布局-->
    <style name="style_layout_main_each_linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="style_layout_main_each_linear_not_center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--竖向间隔10dp-->
    <style name="style_space_10_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>
    <!--竖向间隔20dp-->
    <style name="style_space_20_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="style_space_40_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--竖向间隔80dp-->
    <style name="style_space_80_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <!--竖向间隔120dp-->
    <style name="style_space_120_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <!--竖向间隔160dp-->
    <style name="style_space_160_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
    </style>

    <style name="style_space_240_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
    </style>

    <style name="style_space_280_dp_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">280dp</item>
    </style>
    <!--横向间隔10dp-->
    <style name="style_space_10_dp_horizon">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--横向间隔20dp-->
    <style name="style_space_20_dp_horizon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--横向间隔40dp-->
    <style name="style_space_40_dp_horizon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--横向间隔80dp-->
    <style name="style_space_80_dp_horizon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--横向间隔120dp-->
    <style name="style_space_120_dp_horizon">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!--工人设备自检按键-->
    <style name="style_device_check_btn">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 工人设备自检layout-->
    <style name="style_layout_device_check_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_device_check_dialog_btn">
        <item name="android:layout_width">608dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
